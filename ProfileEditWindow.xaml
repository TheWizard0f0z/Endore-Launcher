<Window x:Class="AktualizatorEME.ProfileEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja Profilu" Height="650" Width="400" 
        WindowStyle="None" AllowsTransparency="True" Background="#111111"
        SnapsToDevicePixels="True">
    
    <Window.Resources>
        <Style x:Key="InfoButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="Cursor" Value="Help"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="EDYCJA PROFILU" Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <CheckBox x:Name="DevModeCheck" Content="DEVELOPER MODE" HorizontalAlignment="Right" Foreground="Orange" FontWeight="Bold" VerticalAlignment="Center" PreviewMouseLeftButtonDown="DevModeCheck_PreviewMouseLeftButtonDown"/>
                </Grid>

                <TextBlock Text="1. INFORMACJE" Foreground="#ff7e00" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,10">
                    <TextBox x:Name="ProfileNameBox" Background="#222" Foreground="White" Height="25" VerticalContentAlignment="Center" Padding="2,0"/>
                    <TextBlock Text="Wpisz nazwÄ™ profilu..." Foreground="#555" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=ProfileNameBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <TextBlock Text="2. ÅšCIEÅ»KA GRY" Foreground="#ff7e00" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <TextBox x:Name="PathBox" Background="#222" Foreground="White" Height="25" VerticalContentAlignment="Center" Padding="2,0,25,0"/>
                        <TextBlock Text="Wpisz Å›cieÅ¼kÄ™ do gry..." Foreground="#555" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=PathBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button x:Name="ClearPathBtn" Content="Ã—" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,3,0" Background="Transparent" BorderThickness="0" Foreground="#888888" Cursor="Hand" Click="ClearPath_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    <Button Grid.Column="1" Content="PRZEGLÄ„DAJ" Width="100" Margin="5,0,0,0" Click="BrowsePath_Click"/>
                </Grid>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Wersja klienta:" Foreground="#888888" Margin="0,0,0,5"/>
                    <TextBox x:Name="ClientVersionBox" 
                            Text="" 
                            Background="#222" 
                            Height="25" 
                            VerticalContentAlignment="Center" 
                            Padding="2,0"
                            IsEnabled="{Binding IsChecked, ElementName=DevModeCheck}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="LimeGreen"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="LimeGreen"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <TextBlock Text="3. POÅÄ„CZENIE Z SERWEREM" Foreground="#ff7e00" FontWeight="Bold" Margin="0,0,0,5"/>
                <UniformGrid Columns="2" Margin="0,0,0,10">
                    <StackPanel Margin="0,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/> <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="Login:" Foreground="#888888" Margin="15,0,0,0"/>
                        </Grid>
        
                        <Grid Margin="0,5,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="i" Style="{StaticResource InfoButtonStyle}" 
                                    Margin="0,0,5,0" VerticalAlignment="Center">
                                <Button.ToolTip>
                                    <ToolTip MaxWidth="300">
                                        <TextBlock Text="JeÅ›li nie posiadasz konta na serwerze, wpisz tutaj dowolny login i hasÅ‚o, a konto zostanie utworzone automatycznie podczas pierwszego logowania. W kreatorze postaci wymagane bÄ™dzie potwierdzenie hasÅ‚a do konta. HasÅ‚o moÅ¼e zawieraÄ‡ maksymalnie 10 znakÃ³w i moÅ¼e skÅ‚adaÄ‡ siÄ™ wyÅ‚Ä…cznie z liter oraz cyfr." 
                                                   TextWrapping="Wrap"/>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            <TextBox x:Name="LoginBox" Grid.Column="1" Background="#222" Foreground="White" 
                                     Height="25" VerticalContentAlignment="Center" Padding="2,0"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/> <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="HasÅ‚o:" Foreground="#888888"/>
                        </Grid>
        
                        <Grid Margin="0,5,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/> <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1" Height="25">
                                <PasswordBox x:Name="PassBox" Background="#222" Foreground="White" Height="25" VerticalContentAlignment="Center" Padding="2,0,30,0"/>
                                <TextBox x:Name="PassVisibleBox" Background="#222" Foreground="White" Height="25" VerticalContentAlignment="Center" Padding="2,0,30,0" Visibility="Collapsed"/>
                                <Button x:Name="ShowPassBtn" Content="ðŸ‘" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" Background="Transparent" BorderThickness="0" Foreground="#888888" Cursor="Hand" PreviewMouseDown="ShowPassBtn_PreviewMouseDown" PreviewMouseUp="ShowPassBtn_PreviewMouseUp">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </UniformGrid>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Adres serwera:" Foreground="#888888"/>
                        <TextBox x:Name="IpBox" Text="server.endore.pl" Background="#222" Foreground="White" Margin="0,5,0,15" Height="25" VerticalContentAlignment="Center" Padding="2,0"  
                                 IsEnabled="{Binding IsChecked, ElementName=DevModeCheck}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Port:" Foreground="#888888"/>
                        <TextBox x:Name="PortBox" Text="4003" Background="#222" Foreground="White" Margin="0,5,0,15" Height="25" VerticalContentAlignment="Center" Padding="2,0"
                                 IsEnabled="{Binding IsChecked, ElementName=DevModeCheck}"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="4. OPCJE DODATKOWE" Foreground="#ff7e00" FontWeight="Bold" Margin="0,0,0,10"/>
                <UniformGrid Columns="2">
                    <CheckBox x:Name="SkipLoginCheck" Content="PomiÅ„ ekran logowania" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="AutoLoginCheck" Content="Automatyczne logowanie" Foreground="White"/>
                    <CheckBox x:Name="ReconnectCheck" Content="Auto. ponawianie poÅ‚Ä…czenia" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="LoginMusicCheck" Content="WÅ‚Ä…cz muzykÄ™ ekranu log." Foreground="White"/>
                </UniformGrid>
                <StackPanel Orientation="Horizontal" Margin="0,15,0,5">
                    <TextBlock Text="GÅ‚oÅ›noÅ›Ä‡ muzyki" Foreground="#888888"/>
                    <TextBlock Text="{Binding Value, ElementName=MusicSlider, StringFormat=': {0:0}%'}" 
                               Foreground="#ff7e00" 
                               FontWeight="Bold" 
                               Margin="5,0,0,0"/>
                </StackPanel>
                <Slider x:Name="MusicSlider" Minimum="0" Maximum="100" Value="50" IsSnapToTickEnabled="True" TickFrequency="1" Margin="0,0,0,20"/>

                <StackPanel Margin="0,10,0,15">
                    <TextBlock Text="5. PLUGINY (OPCJONALNE)" Foreground="#ff7e00" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="i" Style="{StaticResource InfoButtonStyle}" Margin="0,0,5,0" VerticalAlignment="Center">
                            <Button.ToolTip>
                                <ToolTip MaxWidth="300">
                                    <TextBlock Text="Wybierz plik .exe zewnÄ™trznego programu..." TextWrapping="Wrap"/>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                        <Grid Grid.Column="1">
                            <TextBox x:Name="PluginPathBox" Background="#222" Foreground="White" Height="25" VerticalContentAlignment="Center" Padding="2,0,25,0"/>
                            <TextBlock Text="Wybierz plik .exe pluginu..." Foreground="#555" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,1">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=PluginPathBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Button x:Name="ClearPluginBtn" Content="Ã—" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,3,0" Background="Transparent" BorderThickness="0" Foreground="#888888" Cursor="Hand" Click="ClearPlugin_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/></Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        <Button Grid.Column="2" Content="PRZEGLÄ„DAJ" Width="100" Margin="5,0,0,0" Click="BrowsePlugin_Click" Height="25"/>
                    </Grid>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ANULUJ" Width="100" Margin="5,0" Click="Cancel_Click"/>
                    <Button Content="ZAPISZ ZMIANY" Width="150" Margin="5,0" FontWeight="Bold" Click="Save_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>