<Window x:Class="AktualizatorEME.ProfileManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manager Profili" Height="500" Width="400" 
        WindowStyle="None" AllowsTransparency="True" Background="#111111" ResizeMode="NoResize">
    
    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="MANAGER PROFILI" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Content="+ UTWÃ“RZ NOWY" HorizontalAlignment="Right" Width="120" Height="30" Click="CreateNewProfile_Click"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
                <StackPanel x:Name="ProfilesList">
                    <!-- Profile items will be added here dynamically -->
                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="2" Content="ZAMKNIJ" HorizontalAlignment="Center" Width="100" Click="Close_Click"/>
        </Grid>
    </Border>
</Window>